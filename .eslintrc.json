{
  "plugins": ["react"],
  "extends": ["eslint:recommended", "next", "next/core-web-vitals", "plugin:react/recommended"],
  "overrides": [
    {
      "files": ["*.jsx", "*.tsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react-refresh/only-export-components": "off",
    "no-unused-vars": [
      "error",
      {
        "args": "all",
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
